<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="portrait">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llThreadItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">


            <include layout="@layout/thread_userinfo_view" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:ellipsize="end"
                android:lineSpacingExtra="8dp"
                android:maxLines="3"
                android:textColor="#666666"
                android:textSize="12sp" />

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="3"
                android:useDefaultMargins="false">

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

                <com.facebook.drawee.view.SimpleDraweeView style="@style/listViewMultiImageView" />

            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip">


                <TextView
                    android:id="@+id/tvSingleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ffaaaaaa" />

                <TextView
                    android:id="@+id/tvReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="15dip"
                    android:drawableLeft="@drawable/ic_list_comment"
                    android:drawablePadding="5.0dip"
                    android:text="111"
                    android:textColor="#ffaaaaaa" />


                <TextView
                    android:id="@+id/tvLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/tvReply"
                    android:layout_toStartOf="@+id/tvReply"
                    android:drawableLeft="@drawable/ic_list_light"
                    android:drawablePadding="5.0dip"
                    android:text="0"
                    android:textColor="#ffaaaaaa" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


